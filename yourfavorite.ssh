#!/bin/bash

echo "Is your favorite dessert Cake, Ice cream, or Pie?"
read response

case "$response" in
    "Cake" )      echo "Great choice! Even better with a glass of milk!";;
    "Ice cream" ) echo "Great choice! Be sure to eat it before it melts!";;
    "Pie" )       echo "Great choice! You should try having it a la mode!";;
     "*")        echo "Maybe dessert isn't your favorite"
esac
exit 0

